{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/exec", {
        "prepareCmd" : "(cd ./reminder && docker build -t bottlecapdave/gitlab-merge-request-reminder:latest .)",
        "publishCmd": "(cd ./reminder && docker push -t bottlecapdave/gitlab-merge-request-reminder:latest) && (cd ./reminder && docker push -t bottlecapdave/gitlab-merge-request-reminder:${nextRelease.version})"
      }
    ],
    [
      "@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md", "./custom_components/first_bus/manifest.json"],
        "message": "release: Released v${nextRelease.version} [skip ci]"
      }
    ]
  ]
}