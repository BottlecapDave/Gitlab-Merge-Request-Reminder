{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "composite": true
  }
}